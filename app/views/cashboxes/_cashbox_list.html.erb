<p>
  <%= link_to "Create new cashbox", new_ticket_path %>
</p>

<table>
  <tr>
    <th>
      Id</th>
    <th>
      Cashbox name</th>
    <th>
      IP</th>
    <th>
      Port
    </th>
  </tr>
  <% @cashboxes.each do |cashbox| %>
  <tr class="<%= cycle('even', 'uneven')%>">
    <td>
      <%= cashbox.id %>
    </td>
    <td>
      <%= cashbox.name %>
    </td>
    <td>
      <%= cashbox.ip %>
    </td>
    <td>
      <%= cashbox.port %>
    </td>
    <td>
      <%= link_to 'Edit', edit_cashbox_path(cashbox) %>
      <%= link_to 'Delete', cashbox_path(cashbox), :method => :delete, :confirm => 'Sure?' %>
    </td>
  </tr>
  <% end %>
</table>
