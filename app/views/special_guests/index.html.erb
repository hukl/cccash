<h1>SpecialGuests</h1>

<p><%= link_to 'Add new Special Guest', new_special_guest_path %></p>

<p><%= will_paginate @special_guests %></p>

<table>
  <tr>
    <th>Group</th>
    <th>Forename</th>
    <th>Name</th>
    <th>UID</th>
    <th>Ticket</th>
    <th>Price</th>
  </tr>
<% @special_guests.each do |special_guest| %>
  <tr>
    <td><%= special_guest.group.name %></td>
    <td><%= special_guest.forename %></td>
    <td><%= special_guest.name rescue "-"%></td>
    <td><%= special_guest.uid %></td>
    <td>
      <table>
      <% special_guest.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.ticket.name rescue "-" %></td>
        <td><%= nice_price reservation.ticket.price rescue "-" %></td>
      </tr>
      <% end %>
      </table>
    </td>
  </tr>
<% end %>

