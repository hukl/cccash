<h1>Tasks</h1>


<h3>Reprint Receipt</h3>

<% form_tag url_for(:controller => :tasks, :action => :print_receipt) do %>
  <table>
    <tr>
      <td>Receipt ID</td>
      <td><%= text_field_tag  :transaction_id %></td>
    </tr>
    <tr>
      <td>Billing Address</td>
      <td><%= text_area_tag   :billing_address, {}, :cols => 30, :rows => 8 %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= submit_tag "Print" %></td>
    </tr>
  </table>
<% end %>