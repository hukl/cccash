<h1>Tickets</h1>

<p>
  <%= link_to "Create new ticket type", new_ticket_path %>
</p>

<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Price
    </th>
    <th>
      Custom?
    </th>
    <th>
      Actions
    </th>
  </tr>
  <% @tickets.each do |ticket| %>
  <tr>
    <td>
      <%= ticket.name %>
    </td>
    <td>
      <%= ticket.price %>
    </td>
    <td>
      <%= "✔" if ticket.custom? %>
      <%= "✘" if not ticket.custom? %>
    </td>
    <td>
      <%= link_to "edit", edit_ticket_path(ticket) %>
      <%= link_to "delete", ticket_path(ticket), :method => :delete, :confirm => "Sure?" %>
    </td>
  </tr>
  <% end %>
</table>
