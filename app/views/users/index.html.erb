<h1>Users</h1>

<p>
  <%= link_to "Create new user", new_user_path %>
</p>

<h2>Admins</h2>
<table>
  <tr>
    <th>
      login
    </th>
    <th>
      name
    </th>
    <th>
      actions
    </th>
  </tr>
  <% @admins.each do |user| %>
  <tr>
    <td>
      <%= user.login %>
    </td>
    <td>
      <%= user.name %>
    </td>
    <td>
      <%= link_to "edit", edit_user_path(user) %>
      <%= link_to "delete", user_path(user), :method => :delete, :confirm => "Sure?" if not user.id == current_user.id %>
    </td>
  </tr>
  <% end %>
</table>


