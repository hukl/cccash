<%= error_messages_for :workshift %>

<% form_for @workshift do |f| %>
  <table>
    <tr>
      <td>Cashbox</td>
      <td><%= f.select :cashbox_id, cashboxes_for_select %></td>
    </tr>
    <tr>
      <td>User</td>
      <td><%= f.select :user_id, users_for_select %></td>
    </tr>
    <tr>
      <td>Money</td>
      <td><%= f.text_field :money %></td>
    </tr>
    <tr>
      <td colspan="2">
        <h4>Tickets in Cashbox</h4>
        <table>
          <% Ticket.available.each do |ticket| %>
          <tr>
            <td><%= ticket.name %></td>
            <td>
              <%= text_field_tag "workshift[workshift_tickets_attributes][][amount]", 0 %>
              <%= hidden_field_tag "workshift[workshift_tickets_attributes][][ticket_id]", ticket.id %>
            </td>
          </tr>
          <% end %>
        </table>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit %></td>
    </tr>
  </table>
<% end %>
